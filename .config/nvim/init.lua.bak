-- Basic Settings
vim.opt.number = true           -- Show line numbers
vim.opt.relativenumber = true   -- Relative line numbers
vim.opt.mouse = 'a'             -- Enable mouse
vim.opt.ignorecase = true       -- Case insensitive search
vim.opt.smartcase = true        -- Unless capital letters are used
vim.opt.hlsearch = false        -- Don't highlight searches
vim.opt.wrap = false            -- Don't wrap lines
vim.opt.tabstop = 4             -- Tab width
vim.opt.shiftwidth = 4          -- Indent width
vim.opt.expandtab = true        -- Use spaces instead of tabs
vim.opt.termguicolors = true    -- True color support

require ("config.lazy")

-- Plugin Specifications


-- Key Mappings
vim.g.mapleader = ' '  -- Set leader key to space

-- NERDTree
vim.keymap.set('n', '<leader>n', ':NERDTreeToggle<CR>', { desc = 'Toggle NERDTree' })
vim.keymap.set('n', '<leader>f', ':NERDTreeFind<CR>', { desc = 'Find current file in NERDTree' })

-- FZF
vim.keymap.set('n', '<C-p>', ':Files<CR>', { desc = 'Find files' })
vim.keymap.set('n', '<leader>b', ':Buffers<CR>', { desc = 'Find buffers' })
vim.keymap.set('n', '<leader>g', ':Rg<CR>', { desc = 'Ripgrep search' })

-- Ack
vim.keymap.set('n', '<leader>a', ':Ack!<Space>', { desc = 'Search with Ack' })

-- EasyMotion
vim.keymap.set('n', '<leader><leader>w', '<Plug>(easymotion-w)', { desc = 'EasyMotion word' })
vim.keymap.set('n', '<leader><leader>b', '<Plug>(easymotion-b)', { desc = 'EasyMotion back' })
vim.keymap.set('n', '<leader><leader>s', '<Plug>(easymotion-s)', { desc = 'EasyMotion search' })

-- General shortcuts
vim.keymap.set('n', '<leader>w', ':w<CR>', { desc = 'Save file' })
vim.keymap.set('n', '<leader>q', ':q<CR>', { desc = 'Quit' })
vim.keymap.set('n', '<Esc>', ':nohlsearch<CR>', { silent = true, desc = 'Clear search highlight' })
